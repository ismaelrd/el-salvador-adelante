%h2
  = t '.title'

= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f|
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.text_field :email, :required => false, :autofocus => true, class: 'form-control'
  .form-group
    = f.label :password, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.password_field :password, :required => false, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-3
      .checkbox
        %label
          = f.check_box :remember_me
          = t('.remember_me')
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit t('.sign_in'), class: 'btn btn-default'
