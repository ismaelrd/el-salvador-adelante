= form_for [:admin, post], html: { class: 'form-horizontal', role: 'form' } do |f|
  .form-group
    = f.label :active, class: 'col-sm-2 control-label'
    .col-sm-3
      .checkbox
        = f.check_box :active, :required => false
  .form-group
    = f.label :featured, class: 'col-sm-2 control-label'
    .col-sm-3
      .checkbox
        = f.check_box :featured, :required => false
  .form-group
    = f.label :photo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :photo
      = image_tag(post.photo.url(:small)) if post.photo.present?
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :required => true, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, :required => false, class: 'form-control', rows: '3'
  .form-group
    = f.label :content, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :content, class: 'form-control tinymce', rows: '15'
  .form-group
    .col-sm-offset-2.col-sm-10.text-right
      = link_to t('labels.back'), admin_posts_path, class: 'btn btn-default'
      = f.submit t('labels.save'), class: 'btn btn-primary'
= tinymce
