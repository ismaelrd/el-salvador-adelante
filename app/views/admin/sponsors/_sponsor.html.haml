%tr
  %td
    = I18n.t((sponsor.active? == true).to_s)
  %td
    = Sponsor::KIND[sponsor.kind]
  %td
    = sponsor.name
  %td
    = sponsor.alias
  %td
    = sponsor.amount
  %td
    = link_to edit_admin_sponsor_path(sponsor), class: 'btn btn-primary btn-xs' do
      %i.glyphicon.glyphicon-edit
      = t('labels.edit')
  %td
    = link_to admin_sponsor_path(sponsor), class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: t('labels.confirm_delete') } do
      %i.glyphicon.glyphicon-trash
      = t('labels.delete')
