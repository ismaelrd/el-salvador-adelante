.page-header
  %h1
    = t('.title')

- if @categories.any?
  %table.table.table-striped
    %thead
      %tr
        %th
          = t('activerecord.attributes.category.id')
        %th
          = t('activerecord.attributes.category.name')
        %th
          = t('activerecord.attributes.category.created_at')
        %th
    %tbody
      = render @categories
  .text-center
    = will_paginate @categories, renderer: BootstrapPagination::Rails, bootstrap: 3
- else
  .alert.alert-info
    = t('labels.no_results')
