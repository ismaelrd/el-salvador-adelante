%tr
  %td
    = I18n.t((page.active? == true).to_s)
  %td
    = I18n.t((page.in_menu? == true).to_s)
  %td
    = page.name
  %td
    = page.created_at.try(:strftime, '%d/%m/%Y')
  %td
    = link_to edit_admin_page_path(page), class: 'btn btn-primary btn-xs' do
      %i.glyphicon.glyphicon-edit
      = t('labels.edit')
  %td
    = link_to admin_page_path(page), class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: t('labels.confirm_delete') } do
      %i.glyphicon.glyphicon-trash
      = t('labels.delete')
