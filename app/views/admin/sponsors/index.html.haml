.page-header
  %h1
    = t('.title')
.clearfix
  = link_to new_admin_sponsor_path, class: 'btn btn-primary btn-xs pull-right' do
    %i.glyphicon.glyphicon-plus-sign
    = t('labels.new')

- if @sponsors.any?
  %table.table.table-striped
    %thead
      %tr
        %th
          = t('activerecord.attributes.sponsor.active')
        %th
          = t('activerecord.attributes.sponsor.kind')
        %th
          = t('activerecord.attributes.sponsor.name')
        %th
          = t('activerecord.attributes.sponsor.alias')
        %th
          = t('activerecord.attributes.sponsor.amount')
        %th{ colspan: 2 }
    %tbody
      = render @sponsors
  .text-center
    = will_paginate @sponsors, renderer: BootstrapPagination::Rails, bootstrap: 3
- else
  .alert.alert-info
    = t('labels.no_results')
