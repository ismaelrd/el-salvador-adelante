.page-header
  %h1
    = t('.title')
.clearfix
  = link_to new_admin_page_path, class: 'btn btn-primary btn-xs pull-right' do
    %i.glyphicon.glyphicon-plus-sign
    = t('labels.new')

- if @pages.any?
  %table.table.table-striped
    %thead
      %tr
        %th
          = t('activerecord.attributes.page.active')
        %th
          = t('activerecord.attributes.page.in_menu')
        %th
          = t('activerecord.attributes.page.name')
        %th
          = t('activerecord.attributes.page.created_at')
        %th{ colspan: 2 }
    %tbody
      = render @pages
  .text-center
    = will_paginate @pages, renderer: BootstrapPagination::Rails, bootstrap: 3
- else
  .alert.alert-info
    = t('labels.no_results')
