.page-header
  %h1
    = t('.title')
.clearfix
  = link_to new_admin_event_path, class: 'btn btn-primary btn-xs pull-right' do
    %i.glyphicon.glyphicon-plus-sign
    = t('labels.new')

- if @events.any?
  %table.table.table-striped
    %thead
      %tr
        %th
          = t('activerecord.attributes.event.start_at')
        %th
          = t('activerecord.attributes.event.name')
        %th{ colspan: 2 }
    %tbody
      = render @events
  .text-center
    = will_paginate @events, renderer: BootstrapPagination::Rails, bootstrap: 3
- else
  .alert.alert-info
    = t('labels.no_results')
