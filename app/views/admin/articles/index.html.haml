.page-header
  %h1
    = t('.title')
.clearfix
  = link_to new_admin_article_path, class: 'btn btn-primary btn-xs pull-right' do
    %i.glyphicon.glyphicon-plus-sign
    = t('labels.new')

- if @articles.any?
  %table.table.table-striped
    %thead
      %tr
        %th
          = t('activerecord.attributes.article.active')
        %th
          = t('activerecord.attributes.article.featured')
        %th
          = t('activerecord.attributes.article.name')
        %th
          = t('activerecord.attributes.article.created_at')
        %th{ colspan: 2 }
    %tbody
      = render @articles
  .text-center
    = will_paginate @articles, renderer: BootstrapPagination::Rails, bootstrap: 3
- else
  .alert.alert-info
    = t('labels.no_results')
